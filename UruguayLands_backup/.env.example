# Режим запуска: prod или test
RUN_MODE=test

# Интервал запуска в часах (для режима prod)
INTERVAL_HOURS=6

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Максимальное количество страниц для парсинга
MAX_PAGES_MERCADOLIBRE=3
MAX_PAGES_INFOCASAS=3
MAX_PAGES_GALLITO=3

# Прокси-серверы (разделенные запятыми)
# PROXY_LIST=http://user:pass@ip:port,http://user2:pass2@ip2:port2

# API ключи для сервисов прокси
# SMARTPROXY_API_KEY=your_key
# BRIGHTDATA_API_KEY=your_key
# OXYLABS_API_KEY=your_key

# URL API сервисов прокси
# PROXY_SOURCES=https://api.proxyprovider1.com/v1/proxies,https://api.proxyprovider2.com/v1/proxies``

# Настройки максимального числа повторных попыток
MAX_RETRIES=3

# Telegram-бот для публикации объявлений
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHANNEL_ID=your_channel_id 