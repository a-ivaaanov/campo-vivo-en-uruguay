# Настройки приложения UruguayLands
# Переименуйте этот файл в .env для активации настроек

# Общие настройки
LOG_LEVEL=INFO                # Уровень логирования (INFO, DEBUG, WARNING, ERROR)
CHECK_INTERVAL_MINUTES=60     # Интервал между проверками в минутах
PARSERS_TO_RUN=all            # Парсеры для запуска (all, mercadolibre, infocasas)

# Настройки парсинга
MAX_PAGES_PER_RUN=2           # Макс. кол-во страниц для обработки каждым парсером
HEADLESS_MODE=true            # Запускать браузер в фоновом режиме (true/false)

# Пути к файлам
DATA_DIR=data                 # Директория для сохранения данных
LOGS_DIR=logs                 # Директория для логов

# Настройки Telegram
BOT_TOKEN=your_telegram_bot_token_here  # Получите токен у @BotFather
CHAT_ID=your_telegram_chat_id_here      # ID канала или группы для отправки сообщений

# Настройки запуска
TELEGRAM_DELAY_SECONDS=10  # Задержка между отправками сообщений в Telegram (в секундах)

# Настройки логирования
# LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR или CRITICAL

# Настройки прокси (если необходимо)
# PROXY_FILE_PATH=config/proxies.txt  # Путь к файлу со списком прокси (каждый прокси на новой строке)
                                     # Формат: http://user:pass@host:port или http://host:port 