# Режим запуска: prod или test
RUN_MODE=test

# Интервал запуска в часах (для режима prod)
INTERVAL_HOURS=6

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Максимальное количество страниц для парсинга
MAX_PAGES_MERCADOLIBRE=3
MAX_PAGES_INFOCASAS=3
MAX_PAGES_GALLITO=3

# Прокси-серверы (разделенные запятыми)
# PROXY_LIST=http://user:pass@ip:port,http://user2:pass2@ip2:port2

# API ключи для сервисов прокси
# SMARTPROXY_API_KEY=your_key
# BRIGHTDATA_API_KEY=your_key
# OXYLABS_API_KEY=your_key

# URL API сервисов прокси
# PROXY_SOURCES=https://api.proxyprovider1.com/v1/proxies,https://api.proxyprovider2.com/v1/proxies``

# Настройки максимального числа повторных попыток
MAX_RETRIES=3

# Telegram-бот для публикации объявлений
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHANNEL_ID=your_channel_id

# Конфигурация для UruguayLands
# Скопируйте этот файл в .env и настройте параметры

# Общие настройки
DEBUG=false
LOG_LEVEL=INFO
HEADLESS_MODE=true
MAX_PAGES_PER_RUN=3
MAX_DETAILS_PER_RUN=10

# Настройки для Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=your_channel_id
TELEGRAM_ADMIN_ID=your_admin_id
TELEGRAM_NOTIFICATION_ID=your_notification_id
TELEGRAM_DEBUG=false
TELEGRAM_DELAY_SECONDS=10
TELEGRAM_IMAGE_WIDTH=800

# Настройки для прокси (если нужно)
USE_PROXY=false
PROXY_URL=http://your_proxy_server:port
PROXY_USER=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Параметры для парсеров
PARSERS_TO_RUN=mercadolibre,infocasas,gallito
MIN_PRICE_USD=5000
MAX_PRICE_USD=100000
CHECK_INTERVAL_MINUTES=60 